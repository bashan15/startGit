<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#fff"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/title_global_2lines_layout" />

    <com.manyi.saleagent.widget.ClientDetailScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f2f2f2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/margin_step_12"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_toLeftOf="@+id/iv_custom_type"
                        android:layout_marginRight="@dimen/step_dp_12"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_toLeftOf="@+id/iv_custom_type"
                            android:layout_marginRight="@dimen/step_dp_12"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <org.apmem.tools.layouts.FlowLayout
                            android:id="@+id/ll_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:id="@+id/client_name"
                                style="@style/text_16_333"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                >
                                <TextView
                                    android:id="@+id/txt_activity_customer_detail_peer"
                                    android:layout_width="24dp"
                                    android:layout_height="14dp"
                                    android:layout_marginLeft="@dimen/margin_step_4"
                                    android:text="同行"
                                    android:visibility="gone"
                                    android:gravity="center"
                                    android:textSize="@dimen/step_sp_10"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/bg_corner_2dp"
                                    android:textColor="@color/color_60748b"/>
                                <TextView
                                    android:layout_toRightOf="@+id/txt_activity_customer_detail_peer"
                                    android:id="@+id/txt_activity_customer_detail_colleague"
                                    android:layout_width="24dp"
                                    android:layout_height="14dp"
                                    android:layout_marginLeft="@dimen/margin_step_8"
                                    android:text="同事"
                                    android:visibility="gone"
                                    android:layout_centerVertical="true"
                                    android:gravity="center"
                                    android:textSize="@dimen/step_sp_10"
                                    android:background="@drawable/bg_corner_2dp"
                                    android:textColor="@color/color_60748b"/>
                                <TextView
                                    android:layout_toRightOf="@+id/txt_activity_customer_detail_colleague"
                                    android:id="@+id/txt_activity_customer_detail_land"
                                    android:layout_width="24dp"
                                    android:layout_height="14dp"
                                    android:layout_marginLeft="@dimen/margin_step_8"
                                    android:text="房东"
                                    android:visibility="gone"
                                    android:layout_centerVertical="true"
                                    android:gravity="center"
                                    android:textSize="@dimen/step_sp_10"
                                    android:background="@drawable/bg_corner_2dp"
                                    android:textColor="@color/color_60748b"/>
                                <TextView
                                    android:id="@+id/txt_activity_customer_detail_peer"
                                    android:layout_width="24dp"
                                    android:layout_height="14dp"
                                    android:layout_marginLeft="@dimen/margin_step_4"
                                    android:text="同行"
                                    android:visibility="gone"
                                    android:gravity="center"
                                    android:textSize="@dimen/step_sp_10"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/bg_corner_2dp"
                                    android:textColor="@color/color_60748b"/>
                                <TextView
                                    android:layout_toRightOf="@+id/txt_activity_customer_detail_peer"
                                    android:id="@+id/txt_activity_customer_detail_colleague"
                                    android:layout_width="24dp"
                                    android:layout_height="14dp"
                                    android:layout_marginLeft="@dimen/margin_step_8"
                                    android:text="同事"
                                    android:visibility="gone"
                                    android:layout_centerVertical="true"
                                    android:gravity="center"
                                    android:textSize="@dimen/step_sp_10"
                                    android:background="@drawable/bg_corner_2dp"
                                    android:textColor="@color/color_60748b"/>
                                <TextView
                                    android:layout_toRightOf="@+id/txt_activity_customer_detail_colleague"
                                    android:id="@+id/txt_activity_customer_detail_land"
                                    android:layout_width="24dp"
                                    android:layout_height="14dp"
                                    android:layout_marginLeft="@dimen/margin_step_8"
                                    android:text="房东"
                                    android:visibility="gone"
                                    android:layout_centerVertical="true"
                                    android:gravity="center"
                                    android:textSize="@dimen/step_sp_10"
                                    android:background="@drawable/bg_corner_2dp"
                                    android:textColor="@color/color_60748b"/>
                            </RelativeLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <com.huoqiu.framework.widget.IconFontView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="@dimen/margin_step_8"
                                    android:textSize="@dimen/step_dp_20"
                                    android:textColor="@color/color_607d8b"
                                    android:text="@string/icon_font_info_edit"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_step_4"
                                    android:text="编辑"
                                    android:textColor="@color/color_999999"/>
                            </LinearLayout>
                        </org.apmem.tools.layouts.FlowLayout>
                    </LinearLayout>
                        <TextView
                            android:id="@+id/client_demand"
                            style="@style/text_16_333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_step_6"/>
                        <TextView
                            android:id="@+id/activity_customer_txt_first_intention"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/step_sp_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="首次意向:"/>
                        <LinearLayout
                            android:id="@+id/ll_remarks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_step_6"
                            android:orientation="horizontal">
                            <TextView
                                android:textColor="@color/color_999999"
                                android:textSize="@dimen/step_sp_12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="备注信息 "/>
                            <TextView
                                android:id="@+id/client_remarks"
                                style="@style/text_12_666"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_appname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_step_8"
                            android:orientation="horizontal"
                            android:visibility="gone">
                            <TextView
                                android:textColor="@color/color_999999"
                                android:textSize="@dimen/step_sp_12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="APP用户名 "/>
                            <TextView
                                android:id="@+id/tv_app_name"
                                style="@style/text_12_666"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/iv_custom_type"
                        android:scaleType="fitXY"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/margin_step_8"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_label_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/color_607d8b"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:background="@drawable/bg_custom_label_607d8b"
                        android:text="预约: 1"/>
                    <TextView
                        android:id="@+id/tv_label_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/color_e74c3c"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:background="@drawable/bg_custom_label_e74c3c"
                        android:text="1天内回收!"/>
                    <TextView
                        android:id="@+id/tv_label_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/color_607d8b"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:background="@drawable/bg_custom_label_607d8b"
                        android:text="待过户"/>
                    <TextView
                        android:id="@+id/tv_label_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/color_607d8b"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:background="@drawable/bg_custom_label_607d8b"
                        android:text="待结单"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@drawable/card_shadow"
                    android:layout_marginTop="@dimen/margin_step_12"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/down_selector"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_step_12"
                    android:layout_marginBottom="@dimen/margin_step_12">
                    <com.huoqiu.framework.widget.IconFontView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/call_phone_icon"
                        android:textSize="@dimen/step_dp_20"
                        android:textColor="@color/color_607d8b"
                        android:text="@string/icon_font_costomer_phone" />
                    <LinearLayout
                        android:id="@+id/call_phone_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/client_hidden_phone"
                            style="@style/text_14_333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"/>
                        <TextView
                            android:id="@+id/client_phone"
                            android:layout_marginTop="@dimen/step_dp_4"
                            style="@style/text_10_999"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="12dp" />
                    </LinearLayout>
                    <View android:layout_height="@dimen/step_dp_30"
                        android:layout_width="@dimen/step_dp_2"
                        android:background="@color/color_ddd"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/online_chat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/step_dp_16"
                            android:layout_marginRight="@dimen/step_dp_16"
                            android:orientation="vertical">
                            <com.huoqiu.framework.widget.IconFontView
                                android:id="@+id/if_chat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textSize="@dimen/step_dp_20"
                                android:textColor="@color/color_607d8b"
                                android:text="@string/IM_agent_01" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/text_12_999"
                                android:text="在线聊天"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_unread_msg_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="18dp"
                            android:layout_gravity="end"
                            android:background="@drawable/unread_message_count_bg"
                            android:gravity="center"
                            android:visibility="gone"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_size_12" />
                    </FrameLayout>

                    <View
                        android:layout_height="@dimen/step_dp_30"
                        android:layout_width="@dimen/step_dp_2"
                        android:background="@color/color_ddd"/>
                    <LinearLayout
                        android:id="@+id/send_sms_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/step_dp_16"
                        android:orientation="vertical">
                        <com.huoqiu.framework.widget.IconFontView
                            android:id="@+id/if_sms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/step_dp_20"
                            android:textColor="@color/color_607d8b"
                            android:text="@string/icon_font_costomer_message" />
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/text_12_999"
                            android:text="发短信"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_customer_details_recommend_bg"
                android:layout_marginTop="@dimen/margin_step_8"
                android:padding="@dimen/step_dp_16"
                android:visibility="gone">

                <TextView
                    style="@style/text_14_ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐客户装红鸟, 赚爱屋币"/>

                <TextView
                    android:id="@+id/tv_recommend_status"
                    style="@style/text_14_ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TabHost
                    android:id="@+id/tabhost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_step_8">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:id="@+id/botton_tab_view"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_alignParentTop="true">


                            <com.manyi.saleagent.widget.viewpageindicator.UnderlinePageIndicator
                                android:id="@+id/indicator_view"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_gravity="bottom"
                                app:fades="false"
                                app:selectedColor="@color/color_1abc9c" />


                            <TabWidget
                                android:id="@android:id/tabs"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@android:color/transparent"
                                android:orientation="horizontal"
                                android:dividerPadding="5dp"
                                android:showDividers="none" />
                        </FrameLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_above="@+id/botton_tab_view"
                            android:background="@color/color_999" />

                        <FrameLayout
                            android:id="@android:id/tabcontent"
                            android:layout_width="0dp"
                            android:layout_height="0dp" />

                        <com.manyi.saleagent.widget.viewpageindicator.IndexViewPager
                            android:id="@+id/pager"
                            android:layout_width="match_parent"
                            android:layout_height="525dp"
                            android:layout_marginTop="@dimen/margin_step_6"
                            android:layout_marginRight="@dimen/margin_step_8"
                            android:layout_marginLeft="@dimen/margin_step_8"
                            android:layout_below="@+id/botton_tab_view"
                            android:paddingBottom="56dp"/>

                    </RelativeLayout>

                </TabHost>

            </FrameLayout>

        </LinearLayout>

    </com.manyi.saleagent.widget.ClientDetailScrollView>
    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_step_56"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@drawable/card_shadow_up">

        <Button
            android:id="@+id/distribute_house"
            style="@style/text_16_fff"
            android:layout_marginLeft="@dimen/step_dp_12"
            android:layout_marginRight="@dimen/step_dp_12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/step_dp_40"
            android:background="@drawable/bg_btn_selector"
            android:text="手动配盘"/>
        <ImageView
            android:id="@+id/iv_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_step_36"
            android:layout_marginTop="@dimen/margin_step_12"
            android:background="@drawable/customer_details_guide"/>
    </RelativeLayout>

</RelativeLayout>

